<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Authors>Omi Developers</Authors>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>Omi.Fix.Xml.Library</PackageId>
    <Description>Standard FIX protocol XML specification library (FIX 4.2, 4.4, 5.0 SP2)</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Open-Markets-Initiative/Omi.Fix.Generators</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Open-Markets-Initiative/Omi.Fix.Generators</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Omi.Fix.Xml\Omi.Fix.Xml.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Library\Xml\Fix.v4.2.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
    <Content Include="Library\Xml\Fix.v4.4.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
    <Content Include="Library\Xml\Fix.v5.0.sp2.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      <PackageCopyToOutput>true</PackageCopyToOutput>
    </Content>
  </ItemGroup>

</Project>
